<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_info_holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/intro_info_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/app_info_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:cropToPadding="true"
            android:padding="30dp"
            android:src="@drawable/ic_logo" />

        <TextView
            android:id="@+id/app_info_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text="@string/screen1_title"
            android:textColor="@android:color/white"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/app_info_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="@string/screen1_desc"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="64dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/intro_selector_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="45dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="I want to..."
            android:textColor="@android:color/white"
            android:textSize="48sp" />

        <LinearLayout
            android:id="@+id/intro_borrower_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/ic_borrower"
                android:padding="10dp"
                android:cropToPadding="true"
                android:tint="@color/colorPrimary"
                android:backgroundTint="@color/colorYellow"
                android:background="@drawable/shape_oval_red"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="sans-serif-light"
                android:text="Get Pokket Money"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/splash_divider_footer"
            android:layout_height="2dp"
            android:layout_margin="10dp"
            android:background="@android:color/white" />

        <LinearLayout
            android:id="@+id/intro_lender_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/ic_lender"
                android:padding="10dp"
                android:cropToPadding="true"
                android:tint="@color/colorPrimary"
                android:backgroundTint="@color/colorYellow"
                android:background="@drawable/shape_oval_red"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="sans-serif-light"
                android:text="Give Pokket Money"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="64dp" />

    </LinearLayout>

</LinearLayout>