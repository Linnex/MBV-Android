<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/adapter_kyc_type"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="5dp"
        android:background="@drawable/shape_oval_blue"
        android:gravity="center"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/white"
        android:textSize="48sp"
        android:textAllCaps="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/adapter_kyc_type_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="ADADASSA"
            android:textColor="@color/colorBaseDark"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/adapter_kyc_proof_identity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Identity"
                android:layout_marginRight="5dp"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:drawableLeft="@drawable/ic_face_black_24dp"/>

            <TextView
                android:id="@+id/adapter_kyc_proof_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:drawableLeft="@drawable/ic_store_black_24dp"/>

            <TextView
                android:id="@+id/adapter_kyc_proof_student"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Student"
                android:layout_marginRight="5dp"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:drawableLeft="@drawable/ic_assignment_ind_black_24dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>